<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextGroupNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Number"/>

    <EditText
        android:id="@+id/editTextListNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextGroupNumber"
        android:layout_marginTop="16dp"
        android:hint="List Number"/>

    <EditText
        android:id="@+id/editTextFavoriteMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextListNumber"
        android:layout_marginTop="16dp"
        android:hint="Favorite Movie/Series"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextFavoriteMovie"
        android:layout_marginTop="16dp"
        android:text="Save"/>
</RelativeLayout>
